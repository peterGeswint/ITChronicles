@model IT_Chronicles.Models.ViewModels.AddTagRequest

@{
    ViewData["Title"] = "Add a New Tag";
}


<body class="container">
    <div class="py-2">
        <div class="container">
            <h1>Add New Tag - Admin Functionality</h1>
        </div>
    </div>

    <div class="container py-5">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control text-success" id="name" asp-for="Name" required />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input type="text" class="form-control text-success" id="displayname" asp-for="DisplayName" required />
                <span class="text-danger" asp-validation-for="DisplayName"></span>
            </div>

            <div class="mb-3">
                <div class="d-flex" style="justify-content:space-between;">
                    <button type="submit">Save</button>
                    <a asp-area="" asp-controller="AdminTag" asp-action="List" class="btn ms-3">Go To List</a>
                </div>
            </div>
        </form>
    </div>
</body>

