@model IT_Chronicles.Models.ViewModels.LoginViewModel

@{
}



<body>

    <div class="container mx-auto">

        <div class="row justify-content-center">
            <div class="col-12 col-lg-6 border-2" style="border-radius: 20px; border-width: 10px;">

                <h1 class="mb-3 h3 mt-5">Login</h1>

                <form method="post">

                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" id="username" class="form-control text-success" asp-for="UserName"/>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" id="password" class="form-control text-success" asp-for="Password"/>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn">Login</button>
                    </div>

                    <input type="hidden" asp-for="ReturnUrl" />

                </form>

             
            </div>

        </div>

    </div>

</body>

